/* 页面基础 */
.page {
  padding: 0;
  background-color: #ffffff;
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 顶部标题栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e5e5e5;
  flex-shrink: 0;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.header-icon {
  font-size: 44rpx;
  color: #333;
  line-height: 1;
  margin-left: 16rpx;
}

/* 顶部二级 Tab：论坛 / 资讯 */
.sub-tabs {
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
  background-color: #ffffff;
  z-index: 200;
  flex-shrink: 0;
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 88rpx;
}

.sub-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #999999;
  position: relative;
}

.sub-tab.active {
  color: #567722;
  font-weight: 600;
}

.sub-tab.active::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  border-radius: 2rpx;
  background-color: #567722;
}

/* ================== 论坛 Tab 样式 ================== */
.forum-content {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-height: 0;
  overflow: hidden;
  background-color: #ffffff;
}

/* 最新/热门切换 */
.sort-tabs {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.sort-icon {
  font-size: 32rpx;
  line-height: 1;
  margin-right: 16rpx;
}

.sort-options {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.sort-option {
  font-size: 26rpx;
  color: #999;
}

.sort-option.active {
  color: #567722;
  font-weight: 600;
}

.sort-divider {
  font-size: 26rpx;
  color: #e5e5e5;
}

/* 帖子列表 */
.post-list {
  flex: 1;
  min-height: 0;
  height: 0;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.post-card {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.post-author {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-right: 16rpx;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

.post-body {
  margin-bottom: 16rpx;
}

.post-content {
  margin-bottom: 16rpx;
}

.post-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.post-images {
  display: flex;
  gap: 12rpx;
}

.post-images-left {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  flex: 1;
}

.post-image-small {
  width: calc(50% - 4rpx);
  aspect-ratio: 1;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
}

.post-image-small image {
  width: 100%;
  height: 100%;
}

.image-more {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
}

.post-image-large {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.post-image-large image {
  width: 100%;
  height: 100%;
}

.post-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.post-stats {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-icon {
  font-size: 28rpx;
  line-height: 1;
}

.stat-value {
  font-size: 24rpx;
  color: #666;
  margin-right: 16rpx;
}

/* 悬浮发布按钮 */
.float-publish-btn {
  position: fixed;
  right: 32rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #567722;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(86, 119, 34, 0.3);
  z-index: 100;
}

.publish-icon {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: 300;
  line-height: 1;
}

/* ================== 资讯 Tab 样式 ================== */
.info-content {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-height: 0;
  overflow: hidden;
  background-color: #ffffff;
}

.article-list {
  flex: 1;
  min-height: 0;
  height: 0;
  padding: 24rpx;
  box-sizing: border-box;
}

.article-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.article-header {
  margin-bottom: 16rpx;
}

.article-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.5;
}

.article-body {
  margin-bottom: 16rpx;
}

.article-snippet {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: block;
}

.article-images {
  display: flex;
  gap: 12rpx;
}

.article-image {
  flex: 1;
  aspect-ratio: 1;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
}

.article-image image {
  width: 100%;
  height: 100%;
}

.article-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.article-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-icon {
  font-size: 24rpx;
  line-height: 1;
}

.meta-value {
  font-size: 24rpx;
  color: #999;
  margin-right: 16rpx;
}

.article-comments {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

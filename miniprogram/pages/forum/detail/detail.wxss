/* pages/forum/detail/detail.wxss */
.page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}

/* 自定义导航栏 */
.custom-navbar {
  background-color: #ffffff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  border-bottom: 1rpx solid #e5e5e5;
}

.navbar-content {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
}

.navbar-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 48rpx;
  color: #333;
  line-height: 1;
}

.navbar-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.navbar-actions {
  display: flex;
  align-items: center;
}

.navbar-delete {
  font-size: 28rpx;
  color: #ff4444;
  padding: 8rpx 16rpx;
}

.navbar-placeholder {
  width: 60rpx;
}

/* 内容区域 */
.content-scroll {
  padding: 24rpx;
  box-sizing: border-box;
}

.detail-container {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
}

/* 帖子头部 */
.post-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.post-header-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.post-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background-color: #f0f0f0;
}

.post-author-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.post-author {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

/* 帖子内容 */
.post-content-full {
  margin-bottom: 24rpx;
}

.post-text-full {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
}

/* 图片区域 */
.post-images-full {
  margin-bottom: 24rpx;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.image-item {
  width: 100%;
  aspect-ratio: 1;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f0f0f0;
}

.image-item image {
  width: 100%;
  height: 100%;
}

/* 帖子底部 */
.post-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 24rpx;
}

.post-stats-left {
  display: flex;
  align-items: center;
}

.post-stats-right {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  cursor: pointer;
}

.stat-icon {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}

.stat-value {
  font-size: 26rpx;
  color: #666;
}

/* 评论区域 */
.comments-section {
  margin-top: 24rpx;
}

.comments-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.comment-item {
  display: flex;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.comment-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.comment-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background-color: #f0f0f0;
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.comment-author {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.comment-time {
  font-size: 22rpx;
  color: #999;
}

.comment-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

/* 回复列表 */
.replies {
  background-color: #f8f9fa;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  margin-bottom: 12rpx;
}

.reply-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.reply-item:last-child {
  margin-bottom: 0;
}

.reply-author {
  color: #567722;
  font-weight: 500;
}

.reply-text {
  color: #666;
}

/* 评论操作 */
.comment-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.comment-action-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
  cursor: pointer;
}

.comment-action-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

.comment-action-text {
  font-size: 22rpx;
  color: #999;
}

.delete-action .delete-text {
  color: #ff4444;
}

/* 评论输入框 */
.comment-input-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  border-top: 1rpx solid #e5e5e5;
  padding: 16rpx 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-sizing: border-box;
  z-index: 100;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}

.comment-input {
  flex: 1;
  height: 64rpx;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.comment-submit-btn {
  height: 64rpx;
  padding: 0 32rpx;
  background-color: #567722;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 32rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.comment-submit-btn::after {
  border: none;
}

.comment-submit-btn[disabled] {
  background-color: #cccccc;
  color: #999999;
}

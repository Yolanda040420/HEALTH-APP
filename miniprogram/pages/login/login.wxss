/* pages/login/login.wxss */
.login-page {
  width: 100%;
  height: 100vh;
  background: linear-gradient(135deg, #a7b78d 0%, #5b7b3a 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.login-container {
  width: 100%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 20rpx;
  margin-bottom: 40rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: 600;
  color: #ffffff;
}

.login-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 模式切换标签 */
.mode-tabs {
  display: flex;
  width: 100%;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 48rpx;
  padding: 8rpx;
  margin-bottom: 60rpx;
}

.mode-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  border-radius: 40rpx;
  transition: all 0.3s;
}

.mode-tab.active {
  background-color: #ffffff;
  color: #5b7b3a;
  font-weight: 600;
}

/* 表单容器 */
.form-container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.form-item {
  width: 100%;
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

.form-input::placeholder {
  color: #999999;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 96rpx;
  background-color: #ffffff;
  color: #5b7b3a;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  margin-top: 40rpx;
  border: none;
}

.submit-btn::after {
  border: none;
}

.submit-btn-text {
  color: #5b7b3a;
}

<view class="page">

<!-- 顶部二级 Tab：推荐 / 菜单 -->
<view class="top-tabs">
  <view class="tab-item"
        data-tab="recommend"
        bindtap="onSubTabTap">
    推荐
  </view>
  <view class="tab-item active">
    菜单
  </view>
</view>

<!-- 筛选行：食堂 / 档口 / 餐别 -->
<view class="filter-row">
  <view class="filter-select" bindtap="onCanteenTap">
    <text>{{canteenText}}</text>
    <text class="arrow">▾</text>
  </view>
  <view class="filter-select" bindtap="onWindowTap">
    <text>{{windowText}}</text>
    <text class="arrow">▾</text>
  </view>
  <view class="filter-select" bindtap="onTypeTap">
    <text>{{typeText}}</text>
    <text class="arrow">▾</text>
  </view>
</view>

<!-- 最后更新 -->
<view class="last-update">
  最后更新：{{lastUpdate}}
</view>

<!-- 菜品列表 -->
<view class="dish-list">
  <block wx:for="{{dishes}}" wx:key="id">
    <dish-card dish="{{item}}"
               index="{{index}}"
               mode="menu"
               bind:add="onAddMeal"
               bind:like="onLikeDish"
               bind:block="onBlockDish"
               bind:rate="onRateDish" />
  </block>
</view>

</view>

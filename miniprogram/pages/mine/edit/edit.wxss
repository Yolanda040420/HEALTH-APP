/* pages/mine/edit/edit.wxss */
.page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 自定义导航栏 */
.custom-navbar {
  background-color: #ffffff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  border-bottom: 1rpx solid #e5e5e5;
}

.navbar-content {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
}

.navbar-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 48rpx;
  color: #333;
  line-height: 1;
}

.navbar-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.navbar-placeholder {
  width: 60rpx;
}

/* 内容区域 */
.content-scroll {
  padding-bottom: 40rpx;
  box-sizing: border-box;
}

/* 编辑区块 */
.edit-section {
  background-color: #ffffff;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 1rpx solid #f0f0f0;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title-icon {
  width: 32rpx;
  height: 32rpx;
}

.section-title-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

/* 编辑项 */
.edit-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.edit-item:last-child {
  border-bottom: none;
}

.edit-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  flex-shrink: 0;
  width: 200rpx;
}

.edit-input {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: #333;
}

.picker-view {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 8rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  font-size: 32rpx;
  color: #999;
  line-height: 1;
}

/* 今日摄入显示 */
.intake-display {
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.intake-title-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.intake-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.intake-label {
  font-size: 24rpx;
  color: #666;
}

.intake-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #567722;
}

.intake-bar {
  margin-top: 16rpx;
}

.intake-bar-bg {
  height: 12rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.intake-bar-fill {
  height: 100%;
  background-color: #8fbf55;
  border-radius: 6rpx;
  transition: width 0.3s;
}

.intake-labels {
  display: flex;
  justify-content: space-between;
}

.intake-label-small {
  font-size: 22rpx;
  color: #999;
}

/* 保存按钮 */
.save-btn-container {
  padding: 24rpx;
  margin-bottom: 40rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background-color: #567722;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.save-btn::after {
  border: none;
}

.save-btn:active {
  background-color: #4a6620;
}


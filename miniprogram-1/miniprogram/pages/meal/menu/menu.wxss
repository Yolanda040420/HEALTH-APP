.page {
  padding: 0 32rpx 40rpx;
  box-sizing: border-box;
  background-color: #f7f8fa;
}

/* 顶部 推荐 / 菜单 */
.top-tabs {
  margin-top: 24rpx;
  display: flex;
  justify-content: center;
  border-bottom: 1rpx solid #e5e5e5;
}

.tab-item {
  padding: 0 40rpx 16rpx;
  font-size: 30rpx;
  color: #999;
  position: relative;
}

.tab-item.active {
  color: #5b7b3a;
  font-weight: 600;
}

.tab-item.active::after {
  content: "";
  position: absolute;
  left: 20%;
  right: 20%;
  bottom: 0;
  height: 6rpx;
  border-radius: 3rpx;
  background-color: #5b7b3a;
}

/* 顶部筛选行 */
.filter-row {
  margin-top: 20rpx;
  display: flex;
  background-color: #e2ebd1;
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
}

.filter-select {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #ffffff;
}

.filter-select + .filter-select {
  border-left: 1rpx solid rgba(255, 255, 255, 0.4);
}

.arrow {
  margin-left: 8rpx;
}

/* 最后更新文字 */
.last-update {
  margin-top: 16rpx;
  font-size: 22rpx;
  color: #999;
}

/* 菜列表 */
.dish-list {
  margin-top: 20rpx;
}
